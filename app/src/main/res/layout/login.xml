<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my"
        android:orientation="vertical"
        android:gravity="center">

        <!--
        <com.wao.dogcat.widget.GifView
            android:id="@+id/loginGif"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/gdvMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/username"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/one_side_bar"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center" >
                        <EditText
                            android:id="@+id/phoneNumber"
                            android:maxLength="11"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:inputType="numberSigned"
                            android:singleLine="true"
                            android:hint="手机"
                            android:textColor="@color/black"
                            android:textColorHint="@color/lightGray"
                            android:textCursorDrawable="@null"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/msgPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:text=""
                    android:layout_marginLeft="55dp"
                    android:textColor="@color/red"
                    android:textSize="8sp" />


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/password"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/one_side_bar"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" >
                    <EditText
                        android:id="@+id/pw"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                         android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:maxLength="16"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:hint="密码"
                        android:textColor="@color/black"
                        android:textColorHint="@color/lightGray"
                        android:textCursorDrawable="@null"
                        android:textSize="18sp" />
                </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/msgPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:text=""
                    android:layout_marginLeft="55dp"
                    android:textColor="@color/red"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/btnLogin"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:background="@drawable/btn_shape_black"
                    android:layout_gravity="center"
                    android:text="登录"
                    android:textColor="@color/singleColor"
                    android:elevation="5dp"
                    android:textSize="20sp"
                    />
                <Button
                    android:id="@+id/btnLoginGray"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:background="@drawable/btn_shape_gray"
                    android:layout_gravity="center"
                    android:text="登录"
                    android:textColor="@color/textGray"
                    android:textSize="20sp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/forgetPw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="忘记密码   |   "
                        android:textColor="@color/textGray"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/regBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册"
                        android:textColor="@color/textGray"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="使用第三方登录"
                        android:textColor="@color/textGray"
                        android:textSize="12sp"
                        />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>