<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@color/singleColor">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="160dp"
           android:layout_marginBottom="40dp"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_marginLeft="80dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">
               <com.wao.dogcat.widget.CircleImageView
                   app:border_color="@color/textGray"
                   app:border_width="1dp"
                   android:id="@+id/headA"
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:src="@drawable/my"
                   android:scaleType="centerCrop"/>
               <TextView
                   android:id="@+id/nameA"
                   android:textSize="16dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/themeColor"
                   android:text=""/>
           </LinearLayout>
           <LinearLayout
               android:layout_marginRight="80dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">
               <com.wao.dogcat.widget.CircleImageView
                   app:border_color="@color/textGray"
                   app:border_width="1dp"
                   android:id="@+id/headB"
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:src="@drawable/my"
                   android:scaleType="centerCrop"/>
               <TextView
                   android:id="@+id/nameB"
                   android:textSize="16dp"
                   android:textColor="@color/themeColor"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""/>
           </LinearLayout>

       </LinearLayout>

       <TextView
           android:id="@+id/successTxt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="匹配成功"
           android:textSize="22dp"
           android:textColor="@color/themeColor"
           />

       <TextView
           android:id="@+id/askTxt"
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="请求配对"
           android:textSize="22dp"
           android:textColor="@color/themeColor"
           />

       <Button
           android:id="@+id/btnOk"
           android:layout_width="wrap_content"
           android:layout_height="45dp"
           android:paddingLeft="30dp"
           android:paddingRight="30dp"
           android:layout_marginTop="140dp"
           android:background="@drawable/btn_shape_black"
           android:layout_gravity="center"
           android:onClick="onClick"
           android:text="开启yup!"
           android:elevation="5dp"
           android:textColor="@color/singleColor"
           android:textSize="16sp" />

       <Button
           android:id="@+id/btnAgreeMath"
           android:layout_width="wrap_content"
           android:layout_height="45dp"
           android:paddingLeft="30dp"
           android:paddingRight="30dp"
           android:visibility="gone"
           android:layout_marginTop="140dp"
           android:background="@drawable/btn_shape_black"
           android:layout_gravity="center"
           android:onClick="onClick"
           android:text="同意配对"
           android:elevation="5dp"
           android:textColor="@color/singleColor"
           android:textSize="16sp" />

       <Button
           android:id="@+id/btnDisagreeMatch"
           android:layout_width="wrap_content"
           android:visibility="gone"
           android:layout_height="45dp"
           android:paddingLeft="30dp"
           android:paddingRight="30dp"
           android:layout_marginTop="20dp"
           android:background="@drawable/btn_shape_black"
           android:layout_gravity="center"
           android:onClick="onClick"
           android:text="取消配对"
           android:elevation="5dp"
           android:textColor="@color/singleColor"
           android:textSize="16sp" />

   </LinearLayout>

  
</LinearLayout>
