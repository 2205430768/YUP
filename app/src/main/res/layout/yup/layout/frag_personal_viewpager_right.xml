<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/frag_right_up"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/person_bg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/single_bg" />

                <RelativeLayout
                    android:id="@+id/toptop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="80dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/person_right" />
                    <RelativeLayout
                        android:id="@+id/top"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:layout_alignParentLeft="true"
                            android:text="我的评价"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentRight="true">
                        <com.wao.dogcat.widget.MyRatingBar
                            android:id="@+id/right_ratingbar"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            app:starEmpty="@drawable/xianxia_pingjiayonghu_star_gary"
                            app:starFill="@drawable/xianxia_pingjiayonghu_star_yellow"
                            app:starHalf="@drawable/xianxia_pingjiayonghu_star_gary"
                            app:starImageSize="15dp"
                            app:starPadding="5dp"
                            app:starCount="5"
                            app:starStep="0.5"
                            app:stepSize="Half" />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/right_ratingnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/right_ratingbar"
                            android:layout_marginLeft="5dp"
                            android:text="0.0"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/myself"
                        android:layout_below="@+id/top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="10dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|left"
                            android:text="自评"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/right_btn_selfcomment1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_frag_personal_viewpager_right_white"
                            android:gravity="center_horizontal"
                            android:text="tag1"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/right_btn_selfcomment2"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_frag_personal_viewpager_right_white"
                            android:gravity="center_horizontal"
                            android:text="tag2"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/right_btn_selfcomment3"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:background="@drawable/bg_button_frag_personal_viewpager_right_white"
                            android:gravity="center_horizontal"
                            android:text="tag3"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/right_btn_selfcomment4"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:background="@drawable/bg_button_frag_personal_viewpager_right_white"
                            android:gravity="center_horizontal"
                            android:text="tag4"
                            android:textColor="@color/white"
                            android:textSize="14sp" />


                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/himself"
                        android:layout_below="@+id/myself"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|left"
                            android:text="他评"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <FrameLayout
                            android:id="@+id/other_cmt1"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_button_frag_personal_viewpager_right_white"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/right_btn_othercomment1"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:text="tag1"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:id="@+id/tagIcon"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="right"
                                android:background="@drawable/yup_circle">

                                <TextView
                                    android:id="@+id/tagNum1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="1dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="8sp" />
                            </LinearLayout>
                        </FrameLayout>



                        <FrameLayout
                            android:id="@+id/other_cmt2"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_frag_personal_viewpager_right_white"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/right_btn_othercomment2"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:text="tag2"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:id="@+id/tagIcon"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="right"
                                android:background="@drawable/yup_circle">

                                <TextView
                                    android:id="@+id/tagNum2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="1dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="8sp" />
                            </LinearLayout>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/other_cmt3"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_frag_personal_viewpager_right_white"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/right_btn_othercomment3"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:text="tag3"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:id="@+id/tagIcon"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="right"
                                android:background="@drawable/yup_circle">

                                <TextView
                                    android:id="@+id/tagNum3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="1dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="8sp" />
                            </LinearLayout>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/other_cmt4"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_button_frag_personal_viewpager_right_white"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/right_btn_othercomment4"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:text="tag4"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:id="@+id/tagIcon"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="right"
                                android:background="@drawable/yup_circle">

                                <TextView
                                    android:id="@+id/tagNum4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="1dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="8sp" />
                            </LinearLayout>
                        </FrameLayout>





                    </LinearLayout>

                    <TextView
                        android:id="@+id/right_btn_overalltags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="16dp"
                        android:layout_below="@id/himself"
                        android:layout_alignParentRight="true"
                        android:text="查看所有标签"
                        android:textColor="@color/yupColor"
                        android:textSize="12sp" />
                    
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:text="我的金币 "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/right_mycoins"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="00000"
                                android:textColor="@color/yupColor" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:text="今日步数 "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/right_mysteps"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
            
                                android:text="00000"
                                android:textColor="@color/yupColor" />

                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>


            </FrameLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>