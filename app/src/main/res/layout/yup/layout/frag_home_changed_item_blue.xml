<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_blue"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
         >
            <ImageView
                android:id="@+id/item_blue_official"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/official_activity"/>

            <com.wao.dogcat.widget.CircleImageView
                android:layout_marginTop="12dp"
                android:id="@+id/item_blue_portrait"
                android:layout_marginLeft="14dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:border_color="@color/textGray"
                app:border_width="1dp"
                android:src="@drawable/my">
            </com.wao.dogcat.widget.CircleImageView>

            <ImageView
                android:id="@+id/item_blue_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="-10dp"
                android:layout_toRightOf="@id/item_blue_portrait"
                tools:src="@drawable/map_boy"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/item_blue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_blue_portrait"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:textColor="@color/themeColor"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="14sp"
                tools:text="username"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/list_online_icon"/>

                <TextView
                    android:id="@+id/item_blue_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="activityname"
                    android:textColor="@color/themeColor"
                    android:textSize="16sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frag_home_change_item_time"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="截止时间："
                    android:textColor="@color/textGray"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/item_blue_resttime"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/textGray"
                    android:textSize="12sp"
                    tools:text="000"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frag_home_change_item_sum"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="参与人数："
                    android:textColor="@color/textGray"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/item_blue_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/textGray"
                    android:textSize="12sp"
                    tools:text="000"/>

            </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/item_blue_dis"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="0.0km"/>
            <TextView
                android:gravity="bottom"
                android:id="@+id/item_blue_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="昨天"/>
            </LinearLayout>
        <ImageView
            android:id="@+id/item_blue_color"
            android:layout_gravity="right"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/list_xiashang"
            />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>