<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <FrameLayout
        android:id="@+id/him_tag_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_margin="12dp"
        android:background="@drawable/btn_capsule_empty_yellow"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/him_tag_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:text="tag"
            android:textColor="@color/yupColor"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/tagIcon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="right"
            android:background="@drawable/yup_circle">

            <TextView
                android:id="@+id/tagNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="1dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
