<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/frag_left"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/person_bg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/single_bg" />

                <RelativeLayout
                    android:id="@+id/toptop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingTop="80dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/person_left" />

                    <ImageView
                        android:id="@+id/settingBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="12dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="12dp"
                        android:paddingBottom="10dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/person_setting" />

                    <RelativeLayout
                        android:id="@+id/top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <com.wao.dogcat.widget.CircleImageView
                                android:id="@+id/left_avatar"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                app:border_color="@color/textGray"
                                app:border_width="1dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/my" />

                            <LinearLayout
                                android:id="@+id/levelIcon"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="55dp"
                                android:background="@drawable/orange_circle">

                                <TextView
                                    android:id="@+id/levelNum"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="1dp"
                                    android:text="Lv.0"
                                    android:textColor="@color/white"
                                    android:textSize="8sp" />
                            </LinearLayout>
                        </FrameLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/temp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/top"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/left_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/top"
                            android:layout_centerHorizontal="true"
                            android:text="username"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/left_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/top"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/left_name"
                            android:src="@drawable/person_boy" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/temp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:layout_below="@id/temp1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/left_age"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="00岁"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/left_height"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="000cm"
                            android:textColor="@color/white"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/left_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="00kg"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/left_signature"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/temp2"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="signature"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/left_followedTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:text="关注 "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/left_followed"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="00"
                                android:textColor="@color/yupColor" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/left_followmeTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="粉丝 "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/left_followme"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="left"
                                android:text="00"
                                android:textColor="@color/yupColor" />

                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>


            </FrameLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>