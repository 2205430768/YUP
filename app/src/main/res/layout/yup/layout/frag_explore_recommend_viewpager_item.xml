<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.wao.dogcat.widget.CircleImageView
            android:id="@+id/viewpager_frag_explore_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            app:border_color="@color/textGray"
            app:border_width="1dp"
            android:src="@drawable/my"/>


        <RelativeLayout
            android:id="@+id/temp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewpager_frag_explore_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/viewpager_frag_explore_autograph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top"
                android:layout_centerHorizontal="true"
                android:text="username"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/themeColor"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/rec_vp_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/viewpager_frag_explore_autograph"
                tools:src="@drawable/map_boy" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/temp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp1"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/left_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:text="20"
                android:textColor="@color/textGray"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/left_height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/textGray"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/left_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"

                android:text=""
                android:textColor="@color/textGray"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/temp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp">
            <TextView
                android:id="@+id/matchTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匹配度:   "
                android:textColor="@color/themeColor"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/viewpager_frag_explore_match_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fc6042"
                android:textSize="26sp"
                tools:text="00"/>
            </LinearLayout>



        <FrameLayout
            android:id="@+id/temp4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp">
       <ImageView
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:src="@drawable/find_tag"/>
            <TextView
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="-10dp"
                android:text="夜猫子"/>
            <TextView
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="10dp"
                android:text="前卫"/>
            <TextView
                android:id="@+id/tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:textSize="14dp"
                android:layout_marginTop="51dp"
                android:layout_marginLeft="-10dp"
                android:text="偏执狂"/>
            <TextView
                android:id="@+id/tag4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="74dp"
                android:text="小文艺"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="共同标签"
                android:gravity="center"
                android:textColor="@color/themeColor"
                android:visibility="invisible"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/rec_vp_comm_tag"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/girlColor"
                android:textSize="12sp"
                android:gravity="center"
                tools:text="共同标签1 共同标签2 共同标签3"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>